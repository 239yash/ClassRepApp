<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lrback"
    tools:context=".LrActivity">

    <Button
        android:id="@+id/log"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginTop="410dp"
        android:alpha=".8"
        android:background="@drawable/lrbuttons"
        android:fontFamily="@font/poppins_light"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:onClick="loginRedirect"
        android:text="LOGIN"
        android:textAlignment="center"
        android:drawableRight="@mipmap/loginicon"
        android:paddingEnd="15dp"
        android:textColor="#8350DF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reg"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_marginTop="548dp"
        android:alpha=".8"
        android:background="@drawable/lrbuttons"
        android:fontFamily="@font/poppins_light"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:onClick="regRedirect"
        android:text="Register"
        android:drawableRight="@mipmap/regicon"
        android:paddingEnd="15dp"
        android:textAlignment="center"
        android:textColor="#8350DF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:alpha="1"
        android:fontFamily="@font/poppins_light"
        android:text="Hello There !!\nKindly, SignIn/SignUp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="40sp" />


</androidx.constraintlayout.widget.ConstraintLayout>